{
  "name": "Climate Lens",
  "version": "1.0",
  "description": "Simple chrome extension with climate lens",
  "manifest_version": 3,
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.washingtonpost.com/weather/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["sidePanel", "tabs", "storage"],
  "host_permissions": [
    "https://www.washingtonpost.com/weather/*",
    "https://developer.mozilla.org/*"
  ],
  "icons": {
    "16": "get_started16.png",
    "32": "get_started32.png",
    "48": "get_started48.png",
    "128": "get_started128.png"
  }
}
